            Logger.LogInformation("Loaded {TaskCount} tasks for project {ProjectId}", projectTasks?.TotalCount ?? 0, Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading tasks for project {ProjectId}", Id);
        }
        finally
        {
            isLoadingTasks = false;
        }
    }

