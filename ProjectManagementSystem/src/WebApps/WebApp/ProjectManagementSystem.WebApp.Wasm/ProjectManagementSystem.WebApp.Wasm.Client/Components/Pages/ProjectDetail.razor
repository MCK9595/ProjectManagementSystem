    // Gantt chart methods
    private async Task LoadGanttTasks()
    {
        Logger.LogInformation("LoadGanttTasks called. projectTasks is null: {IsNull}, Items count: {Count}", 
            projectTasks == null, projectTasks?.Items?.Count() ?? 0);
        
        if (projectTasks?.Items != null && projectTasks.Items.Any())
        {
            var taskList = projectTasks.Items.ToList();
            ganttTasks = GanttService.CalculateTaskSchedule(taskList);
            Logger.LogInformation("Generated {GanttTaskCount} gantt tasks from {TaskCount} project tasks", 
                ganttTasks?.Count() ?? 0, taskList.Count);
            
            // Log some details about the generated tasks
            if (ganttTasks != null && ganttTasks.Any())
            {
                foreach (var task in ganttTasks.Take(3))
                {
                    Logger.LogInformation("Gantt task: {Name}, Start: {Start}, End: {End}", 
                        task.Name, task.Start, task.End);
                }
            }
            StateHasChanged();
        }
        else
        {
            Logger.LogWarning("Cannot load gantt tasks: projectTasks is null or empty");
            ganttTasks = new List<GanttTask>();
            StateHasChanged();
        }
    }

    private async Task RefreshGanttChart()
    {
