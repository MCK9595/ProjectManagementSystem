        newComment = new CreateTaskCommentDto { Content = "" };
    }

    private void CancelAddComment()
    {
        showAddCommentForm = false;
        newComment = new CreateTaskCommentDto { Content = "" };
    }

    private async Task HandleAddComment()
    {
        if (task == null || isAddingComment) return;

        isAddingComment = true;
        try
        {
            var result = await TaskService.CreateTaskCommentAsync(task.Id, newComment);
            if (result != null)
            {
                showAddCommentForm = false;
                newComment = new CreateTaskCommentDto { Content = "" };
                
                // Reload comments to show the new one
                currentCommentPage = 1;
                await LoadComments();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to add comment. Please try again.");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error adding comment");
            await JSRuntime.InvokeVoidAsync("alert", "An error occurred while adding the comment.");
        }
        finally
        {
            isAddingComment = false;
        }
    }

    private void StartEditComment(TaskCommentDto comment)
    {
        editingCommentId = comment.Id;
        editComment = new UpdateTaskCommentDto { Content = comment.Content };
    }

    private void CancelEditComment()
    {
        editingCommentId = 0;
        editComment = new UpdateTaskCommentDto { Content = "" };
    }

    private async Task HandleUpdateComment()
    {
        if (editingCommentId == 0 || isUpdatingComment) return;

        isUpdatingComment = true;
        try
        {
            var result = await TaskService.UpdateTaskCommentAsync(editingCommentId, editComment, task.Id);
            if (result != null)
            {
                editingCommentId = 0;
                editComment = new UpdateTaskCommentDto { Content = "" };
                
                // Update the comment in the local list
                if (comments?.Items != null)
                {
                    var commentToUpdate = comments.Items.FirstOrDefault(c => c.Id == result.Id);
                    if (commentToUpdate != null)
                    {
                        commentToUpdate.Content = result.Content;
                    }
                }
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to update comment. Please try again.");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating comment");
            await JSRuntime.InvokeVoidAsync("alert", "An error occurred while updating the comment.");
        }
        finally
        {
            isUpdatingComment = false;
        }
    }

    private async Task DeleteComment(int commentId)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this comment?");
        if (!confirmed) return;

        try
        {
            var success = await TaskService.DeleteTaskCommentAsync(commentId, task.Id);
            if (success)
            {
                // Remove the comment from the local list
                if (comments?.Items != null)
                {
                    var updatedComments = comments.Items.Where(c => c.Id != commentId).ToList();
                    comments = new PagedResult<TaskCommentDto>
                    {
                        Items = updatedComments,
                        TotalCount = comments.TotalCount - 1,
                        PageNumber = comments.PageNumber,
                        PageSize = comments.PageSize
                    };
                }
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to delete comment. Please try again.");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting comment");
            await JSRuntime.InvokeVoidAsync("alert", "An error occurred while deleting the comment.");
        }
    }
