    // Comment related methods

    private async Task LoadComments()
    {
        if (task == null) return;

        isLoadingComments = true;
        try
        {
            comments = await TaskService.GetTaskCommentsAsync(task.Id, currentCommentPage, commentPageSize);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading comments");
        }
        finally
        {
            isLoadingComments = false;
        }
    }

    private async Task LoadMoreComments()
    {
        if (task == null || isLoadingComments) return;

        currentCommentPage++;
        isLoadingComments = true;
        try
        {
            var moreComments = await TaskService.GetTaskCommentsAsync(task.Id, currentCommentPage, commentPageSize);
            if (moreComments?.Items?.Any() == true && comments != null)
            {
                // Merge the new comments with existing ones
                var allComments = comments.Items.ToList();
                allComments.AddRange(moreComments.Items);
                
                comments = new PagedResult<TaskCommentDto>
                {
                    Items = allComments,
                    TotalCount = moreComments.TotalCount,
                    PageNumber = currentCommentPage,
                    PageSize = commentPageSize
                };
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading more comments");
            currentCommentPage--; // Rollback page increment on error
        }
        finally
        {
            isLoadingComments = false;
        }
    }

    private void ShowAddCommentForm()
    {
