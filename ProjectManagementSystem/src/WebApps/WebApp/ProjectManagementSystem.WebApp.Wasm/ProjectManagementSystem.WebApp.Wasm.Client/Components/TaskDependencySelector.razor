    <!-- Selected Dependencies List -->
    <div class="selected-dependencies mt-3">
        @if (SelectedDependencies.Any())
        {
            <h6 class="mb-2">é¸æŠã•ã‚ŒãŸä¾å­˜ã‚¿ã‚¹ã‚¯:</h6>
